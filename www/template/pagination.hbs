<nav>
  <ul class="pagination">
    <li {{#if prev}}{{else}}class="disabled"{{/if}}>
      <a {{#if prev}}href="{{prev}}"{{/if}} aria-label="Предыдущая">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pages}}
    <li {{#if active}}class="active"{{/if}}{{#if disabled}}class="disabled"{{/if}}>
      <a {{#if link}}href="{{link}}"{{/if}} {{#if next}}aria-label=""{{/if}} {{#if next}}aria-label="Слудующая"{{/if}}>
        {{name}}
      </a>
    </li>
    {{/each}}
    <li {{#if next}}{{else}}class="disabled"{{/if}}>
      <a {{#if next}}href="{{next}}"{{/if}} aria-label="Слудующая">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
